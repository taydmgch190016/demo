{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex flex-column min-vh-100">
    <div class="app">
        
        <div class="container">
            <div class="grid">
                <div class="row">
                    <h1 class="text-uppercase text-center mt-3">{{ teacher.name }}</h1>
                    <div class="e-panel card" style="background-color: #f5f5f5">
                        <div class="card-body">
                            <div class="card-title">
                            </div>
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">
                                    <table class="table table-bordered">
                                        <thead style="text-align: center;">
                                            <tr>					
												<th>Birthday</th>
												<th>Phone</th>
												<th>Address</th>
                                                <th>Course</th>
                                                <th>Age</th>
											</tr>
                                        </thead>
                                        <tbody style="text-align: center;">
                                            	<tr>
													
													<td>{{ teacher.birthday | date('d/m/Y') }}</td>
													<td>{{ teacher.phone }}</td>
													<td>{{ teacher.address }}</td>
                                                      	<td>
												{% for course in teacher.courses %}
													<a href="{{path('course_detail',{'id':course.id})}}">
													{{course.name}}. 
													</a>
												{% endfor %}
												</td>
                                                {% set age = date().diff(date(teacher.birthday)).y %}
                                                <td>{{ age }}</td>
												</tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}