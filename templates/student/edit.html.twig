{% extends "base.html.twig" %}

{% block title %} Update Student {% endblock %}

{% block body %}
<div class="app">     
        <div class="container mt-5 py-5 h-100">
            <h4 class="titile mb-4"> Profile</h4>
            {{ form_start(form) }}  
            <div class="row">
                <div class="col-lg-4">
                    <div class="profile-container">
                        <div class="card">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <div class="flex-shrink-0">
                                        <img src="{{ asset ('images/student/'~ student.image)}}" width="100%" height="100%">
                                        <label class="form-label" for="image">Upload image</label>
                                          {{ form_label(form.image) }}
                                          {{ form_widget(form.image,
                                             {
                                                'attr': { 'class' : 'form-control'}
                                             })
                                          }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span>Full name</span>
                                </div>
                                <div class="col-sm-9">
                                    <div class="form-group">
                                        {{ form_label(form.name) }}
                                          {{ form_widget(form.name,
                                             {
                                                'attr': { 'class' : 'form-control'}
                                             })
                                          }}
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <span>Age</span>
                                </div>
                                <div class="col-sm-9">
                                     <div class="form-group">
                                    {{ form_label(form.age) }}
                                       {{ form_widget(form.age,
                                          {
                                             'attr': { 'class' : 'form-control'}
                                          })
                                       }}
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <span>Phone number</span>
                                </div>
                                <div class="col-sm-9">
                                    <div class="form-group">
                                    {{ form_label(form.phone) }}
                                       {{ form_widget(form.phone,
                                          {
                                             'attr': { 'class' : 'form-control'}
                                          })
                                       }}
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <span>Address</span>
                                </div>
                                <div class="col-sm-9">
                                    <div class="form-group">
                                     {{ form_label(form.address) }}
                                       {{ form_widget(form.address,
                                          {
                                             'attr': { 'class' : 'form-control'}
                                          })
                                       }}
                                    </div>
                                </div>
                              
                                <div class="block-center block-right">
                                
                                    <button type="submit" class="pl-4 pr-4 btn btn-dark">Save</button>                  
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <hr>              
            </div>
            {{ form_end(form) }}
        </div>
     
    </div>
{% endblock %}